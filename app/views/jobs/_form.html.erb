<%= form_for (setup_job(job)) do |f| %>
  <% if @job.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(job.errors.count, "error") %> prohibited this job from being saved:</h2>

      <ul>
      <% @job.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <%= f.fields_for :pick_up do |p| %>
  <p>Pick Up Location</p>
  <div class="field">
    <%= p.label :address %>
    <%= p.text_field :address %>
  </div>
  <div class="field">
    <%= p.label :city %>
    <%= p.text_field :city %>
  </div>
  <div class="field">
    <%= p.label :state %>
    <%= p.text_field :state %>
  </div>
  <div class="field">
    <%= p.label :postcode %>
    <%= p.text_field :postcode %>
  </div>
  <% end %>


 
  <%= f.fields_for :drop_off do |p| %>
  <p>Drop off Location</p>  
   <div class="field">
    <%= p.label :address %>
    <%= p.text_field :address %>
  </div>
  <div class="field">
    <%= p.label :city %>
    <%= p.text_field :city %>
  </div>
  <div class="field">
    <%= p.label :state %>
    <%= p.text_field :state %>
  </div>
  <div class="field">
    <%= p.label :postcode %>
    <%= p.text_field :postcode %>
  </div>
  <% end %>

  <p>Job Information</p>

  <div class="field">
    <%= f.label :size %>
    <%= f.select :size, options_for_select(['Huge','Big','Medium','Small']), id: :job_size %>
  </div>
  

  <div class="field">
    <%= f.label :urgency %>
    <%= f.select :urgency, options_for_select(['Very Urgent','Not Urgent']) , id: :job_urgency %>
  </div>

  <div class="field">
    <%= f.label :charge %>
    <%= f.number_field :charge, id: :job_charge %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description, id: :job_description %>
  </div>




  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>


 